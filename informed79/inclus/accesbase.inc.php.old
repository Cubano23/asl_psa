# calcul de l'age à partir d'un timestamp MySQL ou date au format j/m/a
function calcage($date, $jma=false) {
  if(!$jma)  # format MySQL
        list($a,$m,$j)= explode('-',$date,3);
  else  # format jj/mm/aa
        list($j,$m,$a)= split('-|/',$date,3);
	 
  $age = date('Y') - $a;
  if(date('m') < $m) $age--;
  if((date('m') == $m) and (date('d') < $j)) $age--;
  return $age;
}
